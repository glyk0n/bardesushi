{% extends '@App/base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block content %}

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Nombre</th>
        <th>Categoría</th>
        <th>Descripción</th>
        <th>Precio</th>
      </tr>
    </thead>
    <tbody>
    {% for producto in productos %}
      <tr>
        <td>-></td>
        <td>{{producto.nombre}}</td>
        <td>{{producto.categoria}}</td>
        <td>{{producto.descripcion}}</td>
        <td>{{producto.precio}}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}