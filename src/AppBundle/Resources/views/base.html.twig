            <a class="navbar-brand" href="{{ path('productos') }}"><img style="width: 3vh;" src="{{ asset('img/logos/icon_options.png') }}" alt="Options"></a>
          <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('img/logos/bardesushi_logo2.png') }}" alt="BARdeSuSHI"></a>
          <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">              
              <li clas="nav-item">
                <a class="nav-link" href="{{ path('homepage')}}">Home</a>
              </li>
              <li clas="nav-item">
                <a class="nav-link" href="{{ path('menupage')}}">Menu</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('contactopage') }}">Contacto</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('pedidos') }}">Pedidos</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownPortfolio" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Galer√≠a
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownPortfolio">
                  <a class="dropdown-item" href="{{ path('galeria') }}">Entrantes</a>
                  <a class="dropdown-item" href="{{ path('galeria') }}">Sashimi</a>
                  <a class="dropdown-item" href="{{ path('galeria') }}">Tartar</a>
                  <a class="dropdown-item" href="{{ path('galeria') }}">Niguiri</a>
                  <a class="dropdown-item" href="{{ path('galeria') }}">Hosomaki</a>
                  <a class="dropdown-item" href="{{ path('galeria') }}">Uramaki</a>                  
                </div>
              </li>              
  {% if is_granted('ROLE_ADMIN') %}
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Producto
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">                  
                  <a class="dropdown-item" href="{{ path('editproducto') }}">Nuevo</a>
                  <a class="dropdown-item" href="{{ path('productos') }}">Listar</a>
                  <a class="dropdown-item" href="blog-post.html">Buscar</a>
                </div>
              </li>
  {% endif %}
              <li class="nav-item">
                <a class="nav-link" href="{{ path('aboutpage')}}">About us</a>
              </li>
  {% if is_granted('ROLE_ADMIN') %}
              <li class="nav-item">
                <a class="nav-link" style="color: red" href="{{ path('logout')}}">logout</a>
              </li>
  {% endif %}
            </ul>
          </div>
        </div>
        </nav>

    {% block content %}{% endblock %}
    {% endblock %}

        <!-- Footer -->

        <div class="footer">
          <div class="container">
              <div class="fixed-bottom text-center text-primary bg-dark py-3">Creative Commons 2019:
                  <a href="http://bardesushi.enxebreformacion.com"> bardesushi.com</a>
                </div>
          </div>
        </div>

        {% block footer %}{% endblock %}
        
        <!-- Bootstrap core JavaScript -->
        <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

        {% block javascripts %}{% endblock %}
